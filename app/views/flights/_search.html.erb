<%= form_with(scope: :flight, url: root_path, local: true, method: :get, class: 'form') do |form| %>
  <div class='form-row'>
    <%= render 'shared/collection_select', form: form, name: :departure, collection: @departure, selected: @departure_id %>


    <%= render 'shared/collection_select', form: form, name: :arrival, collection: @arrival, selected: @arrival_id %>
    <div class='form-group col-auto'>
      <%= form.label :seats, class: 'col-form-label' %>
      <%= form.select :seats, 1..4, {include_blank: false, selected: @seats}, {class: 'form-control'} %>
    </div>
    <div class='form-group col-lg text-right'>
      <%= form.label 'Departure date', class: 'col-form-label d-block text-center' %>
      <%= form.datetime_select :date,
        {start_year: Time.current.year, default: @date || Time.now, use_short_month: true},
        {class: "form-control col-sm-2 d-inline-block"} %>
    </div>
    <div class='col-md-12 form-group btn-group'>
      <%= form.submit 'Search', name: :search, class: 'col-md-6 btn btn-success btn-sm' %>
      <%= form.submit 'Reset', class: 'col-md-6 btn btn-danger' %>
    </div>
  </div>
<% end %>