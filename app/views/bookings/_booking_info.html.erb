<%= form_with model: @booking, local: true, class: 'form' do |f| %>
  <%= f.hidden_field :flight_id, value: @flight.id %>
  <h4 class="title text-secondary font-italic">Passenger(s) information</h4>
  <% @booking.passengers.each_with_index do |passenger, idx| %>
    <li class="list-group-item rounded mb-3">
      <%= f.fields_for :passengers, passenger do |p| %>
        <h5 class='title'><%= (idx+1).ordinalize %> passenger</h5>
        <div class='form-group'>
          <%= p.label :email, class: 'col-form-label col-form-label-sm' %>
          <%= p.email_field :email, class: 'form-control form-control-sm', required: true %>
        </div>
        <div class='form-group'>
          <%= p.label :name, class: 'col-form-label col-form-label-sm' %>
          <%= p.text_field :name, class: 'form-control form-control-sm', required: true %>
        </div>
      <% end %>
    </li>
  <% end %>
  <%= f.submit 'Book', class: 'btn btn-outline-primary btn-block font-weight-bold' %>
<% end %>